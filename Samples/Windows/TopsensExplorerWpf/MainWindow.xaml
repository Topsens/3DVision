<Window x:Class="TopsensExplorerWpf.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:l="clr-namespace:TopsensExplorerWpf"
        Title="Topsens Explorer WPF" Loaded="Window_Loaded" Closing="Window_Closing" ResizeMode="CanMinimize" SizeToContent="WidthAndHeight" Icon="Topsens.ico">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        
        <Grid Grid.Row="0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition/>
                <ColumnDefinition/>
            </Grid.ColumnDefinitions>

            <Image x:Name="cimage" Grid.Column="0" Width="640" Height="480"/>
            <Image x:Name="dimage" Grid.Column="1" Width="640" Height="480"/>

            <Canvas x:Name="canvas" Grid.Column="1"/>
        </Grid>
        
        <l:Panel Grid.Row="1" x:Name="panel"/>
    </Grid>
</Window>
